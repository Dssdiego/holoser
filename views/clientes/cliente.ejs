<% include ./../partials/header.ejs %>
<h2 class="header-title">Clientes</h2>
    <div class="table-wrapper">
        <% if (clientes.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Código</th>
                        <th scope="col">Nome</th>
                        <th scope="col">CPF</th>
                        <th scope="col">Telefone</th>
                        <th scope="col">Sexo</th>
                        <th scope="col">Cidade</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% clientes.forEach((cliente, index) => { %>
                        <tr>
                            <th scope="row"><%= cliente.codigo %></th>
                            <!-- <td><img src="/assets/img/<%= cliente.image %>" class="rounded-circle player-img" alt=""></td> -->
                            <td><%= cliente.nome %></td>
                            <td><%= cliente.cpf %></td>
                            <td><%= cliente.telefone %></td>
                            <td><%= formatSexo(cliente.sexo) %></td>
                            <td><%= cliente.cidade %></td>
                            <td><%= cliente.estado %></td>
                            <td>
                                <button type="button" class="btn btn-primary bmd-btn-icon" onclick="window.location = '/editCliente/<%= cliente.codigo %>'">
                                    <i class="material-icons">edit</i>
                                </button>
                                <button type="button" class="btn bmd-btn-icon" onclick="window.location = '/deleteCliente/<%= cliente.codigo %>'">
                                    <i class="material-icons btn-delete">delete</i>
                                </button>
                                <!-- <a href="/edit/<%= cliente.codigo %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Editar</a> -->
                                <!-- <a href="/delete/<%= cliente.codigo %>" class="btn btn-sm btn-danger">Excluir</a> -->
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">Nenhum cliente encontrado. Clique <a href="/addCliente">aqui</a> para adicionar um cliente.</p>
        <% } %>
    </div>
</div>
<button type="button" class="btn bmd-btn-fab fab" onclick="window.location = '/addCliente'">
    <i class="material-icons">add</i>
</button>
</body>
</html>